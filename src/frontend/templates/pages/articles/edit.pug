extends ../layout

block content
  main
    section.modal.modal--flex
      .popup.popup--new-publication.popup--flex
        .new-publication
          button.popup__button.button.button--popup-close(type='button' aria-label='Закрыть окно') Закрыть окно
          .new-publication__form.form
            form(action=(type === `add` ? `/articles/add` : `/articles/edit/${article.id}`) method='post' enctype='multipart/form-data')
              .new-publication__header
                if type === `add`
                  h1 Новая публикация
                if type === `edit`
                  h1 Редактирование публикации
                .new-publication__date-form
                  h3 Дата публикации
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(
                      type='text'
                      name='createdDate'
                      placeholder=(article.createdDate ? article.createdDate.day : ``)
                      value=(article.createdDate ? article.createdDate.day : ``)
                    )
                button.new-publication__button.button.button--colored(type='submit')= type === `add` ? `Опубликовать` : `Редактировать`
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' placeholder='Заголовок' name='title' value=article.title required)
                .form__field.form__field--post-image
                  label
                    input#image-name-field(
                      type='text'
                      placeholder='Фотография'
                      name='image'
                      value=(article.image ? article.image : ``)
                      readonly
                    )
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='picture' value=(article.image ? article.image : ``))
                      | Обзор
                  button.button.button--transparent(type='button') Удалить
                .new-publication__checkbox.new-publication__checkbox--auto
                  each category in categoryList
                    input(
                      id=category
                      type='checkbox'
                      name=`categories[${category}]`
                      checked=(article.categories && article.categories.includes(category))
                    )
                    label(for=category)= category
                  a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='2' placeholder='Анонс публикации' name='announce')= article.announce
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' placeholder='Полный текст публикации' name='fullText')= article.fullText

      .modal__overlay
